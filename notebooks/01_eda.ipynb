import pandas as pd
import numpy as np
import matplotlib.pyplot as plt

# Load data
df = pd.read_csv("../data/raw/BrentOilPrices.csv")
df["Date"] = pd.to_datetime(df["Date"], dayfirst=True)

# Check date range & missing dates
print("DATE RANGE:", df["Date"].min(), "â†’", df["Date"].max())
print("MISSING DATES:", df["Date"].isna().sum())

# Compute log returns
df["log_return"] = np.log(df["Price"]).diff()
print("\nLOG RETURN SUMMARY:")
print(df["log_return"].dropna().describe())

# Plot raw prices
plt.figure(figsize=(12,4))
plt.plot(df["Date"], df["Price"], label="Price (USD)")
plt.title("Brent Oil Prices (1987-2022)")
plt.xlabel("Date")
plt.ylabel("Price (USD per barrel)")
plt.legend()
plt.show()

# Plot log returns
plt.figure(figsize=(12,4))
plt.plot(df["Date"], df["log_return"], label="Log Return", color='orange')
plt.title("Brent Oil Log Returns (Daily)")
plt.xlabel("Date")
plt.ylabel("Log Return")
plt.legend()
plt.show()
